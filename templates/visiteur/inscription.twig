{% extends "base.twig" %}

{% block head %} 
        <title>Inscription utilisateur</title>
{% endblock %}

{% block content %}
<h1>inscription</h1>

<form action="" method="post">

	<label for="nom">Votre Nom</label>
	<input type="nom" name="nom" placeholder="NOM"  id="nom" required><br>

	<label for="prenom">Votre Prénom</label>
	<input type="prenom" name="prenom" placeholder="Prénom" id="prenom" required><br>

	<label for="email">Votre Email</label>
	<input type="email" name="email" placeholder="adresse@hotmail.com" id="email" required><br>

	<label for="mdp">Mot de Passe</label>
	<input type="password" name="mdp" placeholder="" id="mdp" required><br>

	<label for="confirmMdp">Confirmation du mot de Passe</label>
	<input type="password" name="confirmMdp" placeholder="" id="confirmMdp" required><br>

	<input type="submit" name="submit" value="inscription" id="submit"><br>

	{{ messageServeur |raw }}

</form>

{% endblock %}
