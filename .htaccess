<files .htaccess>
order allow,deny
deny from all
</files>

#--------------------------------------------------
# R�pertoire : /Blog Professionnel/
#--------------------------------------------------

# Le serveur doit suivre les liens symboliques :
Options +FollowSymlinks

# Activation du module de r��criture d'URL :
RewriteEngine on


ErrorDocument 404 /templates/blog/404.twig

#--------------------------------------------------
# R�gles de r��criture d'URL : 
#--------------------------------------------------


RewriteRule ^$ index.php?action=accueil

RewriteRule ^connexion$ index.php?action=connexion
RewriteRule ^inscription$ index.php?action=inscription

RewriteRule ^blogs$ index.php?action=blogs
RewriteRule ^blog-([0-9]+)$ index.php?action=blog&numero=$1

RewriteRule ^ajouter-un-blog$ index.php?action=ajouter-un-blog
RewriteRule ^modifier-blogs$ index.php?action=modifier-blogs
RewriteRule ^modifier-blog-([0-9]+)$ index.php?action=modifier-blog&numero=$1
RewriteRule ^commentaires$ index.php?action=commentaires
RewriteRule ^visiteurs$ index.php?action=visiteurs